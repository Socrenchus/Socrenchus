html {
  background-color: #ace;
  font-family: Helvetica, Arial, "Luxi Sans", sans-serif;
}

#main {
  margin-left: 10%;
  margin-right: 10%;
  background-color: #f2f9ff;
}

#instance-bar {
  max-height: 90px;
  border: 2px solid blue;
  background: #000000;
  background: -moz-linear-gradient(top, #000000 0%, #000044 100%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#000000), color-stop(100%,#000044));
  background: -webkit-linear-gradient(top, #000000 0%,#000044 100%); 
  background: -o-linear-gradient(top, #000000 0%,#000044 100%); 
  background: -ms-linear-gradient(top, #000000 0%,#000044 100%);
  background: linear-gradient(top, #000000 0%,#000044 100%); 
}
#instance-logo {
  height: 90px;  
}

#session-bar {
  border: 2px solid yellow;
  background-color: orange;
}
span.sessionBarUserName {
	//font-weight: bold; //something to set it apart.  
	text-shadow: 0px 1px 0px yellow;
}
#logout-button {
  float: right;
}

div.post {
  border: 2px solid #1CFF37;
  background-color: #BAFFC2;
  margin: .5em;
}
div.post > div.main {
  border: 2px solid #FFE017;
  background-color: #FFF6BA;
}
div.post > div.body {
  display: block;
  border: 2px solid #FFAE00;
  background-color: #FFF6E3;
}
div.post > div.attributes {
  display: block;
  border: 2px solid #FF3B3B;
  background-color: #FFD5C9;
}
div.attributes > div.votebox {
  display: inline;
  border: 2px solid #2E58FF;
  background-color: #C7D2FF;
}
div.attributes > div.tagbox {
  display: inline;
  border: 2px solid #EE2EFF;
  background-color: #FBC9FF;
}

div.your-reply {
  border: 1px solid #2E58FF;
  background-color: #C7D2FF;
  border-bottom-width: 2px;
}
div.your-reply > textarea {
  display: block;
  width: 90%;
  minHeight: 8em;
  margin: .5em;
  
  resize: none;

  border: 1px solid #2E58FF;
  border-top-width: 2px;
  border-left-color: #738FFF;
  border-left-width: 2px;
  border-right-color: #738FFF;
  border-right-width: 2px;
  
  background: #e3ebf7;
  background: -moz-linear-gradient(top, #e3ebf7 0%, #ffffff 100%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#e3ebf7), color-stop(100%,#ffffff)); 
  background: -webkit-linear-gradient(top, #e3ebf7 0%,#ffffff 100%);
  background: -o-linear-gradient(top, #e3ebf7 0%,#ffffff 100%);
  background: -ms-linear-gradient(top, #e3ebf7 0%,#ffffff 100%);
  background: linear-gradient(top, #e3ebf7 0%,#ffffff 100%);
   
  font-family: Helvetica, Arial, "Luxi Sans", sans-serif;
}
div.your-reply > button {
  margin: .5em;
}