post_basecolor = rgb(89, 122, 255, 1)
//post_basecolor = #4e9a06 //GREEN
//post_basecolor = rgb(1, 0, 89) //DBLUE
post_papercolor = post_basecolor + 95%
post_lightcolor = post_basecolor + 50%
post_llightcolor = post_lightcolor + 50%
post_darkcolor = post_basecolor - 50%
post_ddarkcolor = post_darkcolor - 50%

div.post
  border 1px solid post_ddarkcolor
  //Since mixins aren't working correctly, border-radius, box-shadow and background gradients aren't cross-browser compatible yet.  
  //I can fix this, but I haven't yet. 
  border-radius .5em
  box-shadow inset 0 -5px 10px post_darkcolor, 1px 2px 5px post_darkcolor
  background-image -webkit-linear-gradient(top, post_basecolor 0%, post_darkcolor 100%)
  margin .5em
  padding 0

//Table structure
div.table
  display table
div.colgroup
  display table-column-group
div.col
  display table-column
div.tr
  display table-row
div.td
  display table-cell
 
//Post size-tuning and layout
div.post_container
  display inline-block

div.post_content
div.post-content
  border-color post_darkcolor post_darkcolor post_darkcolor post_darkcolor 
  border-style none solid solid none
  border-width 0px 1px 1px 0px
  border-radius .5em 0 0 0
  background-color post_papercolor
  box-shadow inset -2px -3px 10px post_lightcolor
  position relative
  top 0
  left 0
  padding .5em
  margin 0 0 0 0
  
  p
    margin 0 0 1em 0
    text-shadow 1px 1px 1px post_lightcolor
    

div.tagbox
  border 1px solid post_darkcolor
  border-radius .5em
  background-color post_llightcolor
  box-shadow inset 0 3px 5px post_basecolor
  margin .5em  
  padding .5em




div.post-main
  display table

  div.post-votebox-column
    display table-cell

  div.post-content-column
    display table-cell
    width auto
    
  div.post-tagbox-column
    display table-cell
    width 12em






