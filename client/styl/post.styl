div.your-reply > textarea {
  display: block;
  width: 90%;
  minHeight: 8em;
  margin: .5em;
  
  resize: none;

  border: 1px solid #2E58FF;
  border-top-width: 2px;
  border-left-color: #738FFF;
  border-left-width: 2px;
  border-right-color: #738FFF;
  border-right-width: 2px;
  
  background: #e3ebf7;
  background: -moz-linear-gradient(top, #e3ebf7 0%, #ffffff 100%);
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#e3ebf7), color-stop(100%,#ffffff)); 
  background: -webkit-linear-gradient(top, #e3ebf7 0%,#ffffff 100%);
  background: -o-linear-gradient(top, #e3ebf7 0%,#ffffff 100%);
  background: -ms-linear-gradient(top, #e3ebf7 0%,#ffffff 100%);
  background: linear-gradient(top, #e3ebf7 0%,#ffffff 100%);
   
  font-family: Helvetica, Arial, "Luxi Sans", sans-serif;
}
div.your-reply > button {
  margin: .5em;
}

